<style>
    .uk-notification {
        background-color: #5e5c5c !important;
    }

    .uk-notification-message {
        font-size: 16px;
        background-color: #5e5c5c !important;
        color: #fff !important;
    }
</style>


<script>

    window.onload = Notify;

    function Notify() {
        if ('@ViewBag.Mensagem' != '') {
            UIkit.notification({
                message: '@ViewBag.Mensagem',
                pos: 'top-center',
                timeout: 3000
            });
        }
    }

</script>