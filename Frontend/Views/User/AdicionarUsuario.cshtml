
@using Frontend.Models
@model UserRegister

<form asp-action="AdicionarUsuario" method="POST">

    <div class="uk-card uk-card-default uk-card-body">

        <div class="pesquisa-add-titulo">
            <div class="uk-text-left" uk-grid>
                <div class="uk-width-2-3">
                    <div class="page-title">
                        Cadastrar Novo Usuário
                    </div>
                </div>
                <div class="uk-width-1-3 uk-text-right">
                    <a asp-action="ListaUsuarios" class="page-close">
                        <span uk-icon="icon:close; ratio:1.5"></span>
                    </a>
                </div>
            </div>
        </div>

        <div class="formulario">

            <div asp-validation-summary="ModelOnly" class="uk-alert-danger" uk-alert>
                <a class="uk-alert-close" uk-close></a>
            </div>

            <div class="uk-text-left" uk-grid>

                <div class="uk-width-1-3@s">
                    <label class="uk-form-label" for="form-stacked-text">Nome</label>
                    <input type="text" asp-for="Username" class="uk-input ">
                    <span asp-validation-for="Username" class="uk-text-danger"></span>
                </div>
                <div class="uk-width-1-3@s">
                    <label class="uk-form-label" for="form-stacked-text">Perfil</label>
                    <select asp-for="Role" class="uk-select">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <div class="uk-width-1-3@s">
                    <label class="uk-form-label" for="form-stacked-text">Status</label>
                    <select asp-for="Active" class="uk-select">
                        <option value="true">Ativo</option>
                        <option value="false">Inativo</option>
                    </select>
                </div>
                <div class="uk-width-1-3@s">
                    <label class="uk-form-label" for="form-stacked-text">Senha</label>
                    <input type="password" asp-for="Password" class="uk-input">
                    <span asp-validation-for="Password" class="uk-text-danger"></span>
                </div>
                <div class="uk-width-1-3@s">
                    <label class="uk-form-label" for="form-stacked-text">Confirmação da Senha</label>
                    <input type="password" asp-for="ConfirmPassword" class="uk-input">
                    <span asp-validation-for="ConfirmPassword" class="uk-text-danger"></span>
                </div>
            </div>
        </div>


        <div class="uk-margin">
            <button type="submit" value="Concluir" class="uk-button uk-button-primary">
                Concluir
            </button>
            <a asp-action="ListaUsuarios" class="uk-button uk-button-default">
                Fechar
            </a>
        </div>

    </div>

</form>