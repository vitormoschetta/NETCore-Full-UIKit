@using Frontend.Models
@model UserUpdatePassword



<form asp-action="AlterarSenha" method="POST">

    <div class="uk-card uk-card-default uk-card-body">

        <div class="pesquisa-add-titulo">
            <legend class="uk-legend">Alterar a Senha</legend>
        </div>

        <div class="formulario">

            <div asp-validation-summary="ModelOnly" class="uk-alert-danger" uk-alert>
                <a class="uk-alert-close" uk-close></a>
            </div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Username" />

            <div class="uk-text-left" uk-grid>
                <div class="uk-width-1-3">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">Senha</label>
                        <input type="password" asp-for="Password" class="uk-input">
                        <span asp-validation-for="Password" class="uk-text-danger"></span>
                    </div>
                </div>
                <div class="uk-width-1-3">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">Nova Senha</label>
                        <input type="password" asp-for="NewPassword" class="uk-input">
                        <span asp-validation-for="NewPassword" class="uk-text-danger"></span>
                    </div>
                </div>
                <div class="uk-width-1-3">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">Repita a Senha</label>
                        <input type="password" asp-for="ConfirmNewPassword" class="uk-input">
                        <span asp-validation-for="ConfirmNewPassword" class="uk-text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="uk-margin">
                <input type="submit" value="Concluir" class="uk-button uk-button-secondary" />
                <a asp-action="Index" class="uk-button uk-button-default">Fechar</a>
            </div>
        </div>

    </div>
</form>